# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration (for BullMQ queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL Configuration (for order history)
# Either set DATABASE_URL (recommended for Supabase) or the individual POSTGRES_* vars
DATABASE_URL=postgresql://user:password@localhost:5432/order_engine
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=order_engine

# Supabase (optional)
SUPABASE_URL=https://your-supabase-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Order Processing Configuration
MAX_CONCURRENT_ORDERS=10
ORDERS_PER_MINUTE=100
MAX_RETRY_ATTEMPTS=3